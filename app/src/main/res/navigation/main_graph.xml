<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navgraph"
    app:startDestination="@id/newsOverviewFragment">

    <fragment
        android:id="@+id/newsOverviewFragment"
        android:name="app.mvvm.architecture.ui.newsOverview.NewsOverviewFragment"
        android:label="@string/news_overview_title"
        tools:layout="@layout/fragment_news_overview" >
        <action
            android:id="@+id/action_newsOverviewFragment_to_newsItemFragment"
            app:destination="@id/newsItemFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/newsItemFragment"
        android:name="app.mvvm.architecture.ui.newsItem.NewsItemFragment"
        android:label="@string/news_item_title"
        tools:layout="@layout/fragment_news_item" >
        <argument
            android:name="newsItem"
            app:argType="app.mvvm.architecture.model.NewsItem" />
    </fragment>

</navigation>